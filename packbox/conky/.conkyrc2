###########################
##   Conky configuration
###########################
background yes
use_xft yes
xftfont Courier new:size=8
xftalpha 0.1
out_to_console no
update_interval 2
total_run_times 0

own_window yes
own_window_type dock
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes

double_buffer yes
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes

stippled_borders 5
border_margin 8
border_width 1

no_buffers true
uppercase no

cpu_avg_samples 2
net_avg_samples 2

override_utf8_locale yes
use_spacer left

###########################
##   Couleurs
###########################
default_color           ffffff
default_shade_color     000000
default_outline_color   000000
color1                  94c3e0          # donnÃ©es
color2                  dbe7ff          # titre

###########################
##   Positionner son conky
###########################
alignment center
gap_x 2000
gap_y 50
minimum_size 1000 1000
##maximum_width 300

TEXT
${color #e6bfb5}${font Blacksword:pixelsize=100}${alignc}${time %A %d %B %Y}
${alignc}${time %H:%M}

